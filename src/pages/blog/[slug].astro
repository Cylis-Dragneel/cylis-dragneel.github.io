---
import MainLayout from "../../layouts/MainLayout.astro";
import { getCollection, type CollectionEntry } from "astro:content";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

interface Props {
  post: CollectionEntry<"blog">;
}

const { post } = Astro.props;
const { Content } = await post.render();

function formatDate(date: Date): string {
  return date.toLocaleDateString("en-US", {
    year: "numeric",
    month: "long",
    day: "numeric",
  });
}
---

<MainLayout title={`${post.data.title} | Cylis Blog`} currentPage="Blog">
  <article class="py-24">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <header class="mb-12">
        <a
          href="/blog"
          class="inline-flex items-center gap-2 text-sm text-accent-400 hover:text-accent-300 mb-6 transition-colors"
        >
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          Back to all posts
        </a>

        <div class="flex flex-wrap gap-2 mb-4">
          {
            post.data.tags.map((tag) => (
              <span class="px-2 py-1 text-xs font-mono text-accent-400 bg-accent-500/10 rounded">
                {tag}
              </span>
            ))
          }
        </div>

        <h1 class="text-3xl sm:text-4xl font-bold text-base-50 mb-4 post-title">
          {post.data.title}
        </h1>

        <div class="flex items-center gap-4 text-sm text-base-400">
          <span>{formatDate(post.data.date)}</span>
          <span>Â·</span>
          <span>by {post.data.author}</span>
        </div>
      </header>

      <!-- Content -->
      <div class="prose-content">
        <Content />
      </div>

      <!-- Footer -->
      <footer class="mt-16 pt-8 border-t border-base-800 post-footer">
        <a
          href="/blog"
          class="inline-flex items-center gap-2 text-accent-400 hover:text-accent-300 transition-colors"
        >
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          Back to all posts
        </a>
      </footer>
    </div>
  </article>
</MainLayout>

<style>
  /* Prose content styles */
  .prose-content {
    color: var(--color-base-300);
    line-height: 1.75;
  }

  .prose-content :global(h1),
  .prose-content :global(h2),
  .prose-content :global(h3),
  .prose-content :global(h4) {
    color: var(--color-base-100);
    font-weight: 600;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }

  .prose-content :global(h2) {
    font-size: 1.5rem;
  }

  .prose-content :global(h3) {
    font-size: 1.25rem;
  }

  .prose-content :global(h4) {
    font-size: 1.125rem;
  }

  .prose-content :global(p) {
    margin-bottom: 1.5rem;
  }

  .prose-content :global(a) {
    color: var(--color-accent-400);
    text-decoration: underline;
    text-underline-offset: 2px;
    transition: color 0.15s;
  }

  .prose-content :global(a:hover) {
    color: var(--color-accent-300);
  }

  .prose-content :global(ul),
  .prose-content :global(ol) {
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
  }

  .prose-content :global(ul) {
    list-style-type: disc;
  }

  .prose-content :global(ol) {
    list-style-type: decimal;
  }

  .prose-content :global(li) {
    margin-bottom: 0.5rem;
  }

  .prose-content :global(blockquote) {
    border-left: 4px solid var(--color-accent-500);
    padding-left: 1rem;
    font-style: italic;
    color: var(--color-base-400);
    margin: 1.5rem 0;
  }

  .prose-content :global(pre) {
    background-color: var(--color-base-900);
    border-radius: 0.5rem;
    padding: 1rem;
    overflow-x: auto;
    margin: 1.5rem 0;
    font-size: 0.875rem;
  }

  .prose-content :global(code) {
    font-family: var(--font-mono);
  }

  .prose-content :global(:not(pre) > code) {
    background-color: var(--color-base-800);
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
    color: var(--color-accent-400);
    font-size: 0.875rem;
  }

  .prose-content :global(img) {
    border-radius: 0.5rem;
    margin: 2rem 0;
  }

  .prose-content :global(hr) {
    border-color: var(--color-base-800);
    margin: 2.5rem 0;
  }

  .prose-content :global(table) {
    width: 100%;
    margin: 1.5rem 0;
  }

  .prose-content :global(th) {
    text-align: left;
    padding: 0.75rem;
    background-color: var(--color-base-800);
    color: var(--color-base-200);
    font-weight: 600;
  }

  .prose-content :global(td) {
    padding: 0.75rem;
    border-bottom: 1px solid var(--color-base-800);
  }

  .prose-content :global(input[type="checkbox"]) {
    margin-right: 0.5rem;
    accent-color: var(--color-accent-500);
  }

  /* Light theme */
  [data-theme="light"] .prose-content {
    color: var(--color-base-600);
  }

  [data-theme="light"] .prose-content :global(h1),
  [data-theme="light"] .prose-content :global(h2),
  [data-theme="light"] .prose-content :global(h3),
  [data-theme="light"] .prose-content :global(h4) {
    color: var(--color-base-900);
  }

  [data-theme="light"] .prose-content :global(a) {
    color: var(--color-accent-600);
  }

  [data-theme="light"] .prose-content :global(a:hover) {
    color: var(--color-accent-700);
  }

  [data-theme="light"] .prose-content :global(blockquote) {
    color: var(--color-base-500);
  }

  [data-theme="light"] .prose-content :global(pre) {
    background-color: var(--color-base-100);
  }

  [data-theme="light"] .prose-content :global(:not(pre) > code) {
    background-color: var(--color-base-200);
    color: var(--color-accent-700);
  }

  [data-theme="light"] .prose-content :global(th) {
    background-color: var(--color-base-100);
    color: var(--color-base-800);
  }

  [data-theme="light"] .prose-content :global(td) {
    border-color: var(--color-base-200);
  }

  [data-theme="light"] .post-title {
    color: var(--color-base-900);
  }

  [data-theme="light"] .post-footer {
    border-color: var(--color-base-200);
  }
</style>
