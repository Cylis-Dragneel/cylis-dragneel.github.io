---
import MainLayout from "../../layouts/MainLayout.astro";
import { getCollection, type CollectionEntry } from "astro:content";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

interface Props {
  post: CollectionEntry<"blog">;
}

const { post } = Astro.props;
const { Content } = await post.render();

function formatDate(date: Date): string {
  return date.toLocaleDateString("en-US", {
    year: "numeric",
    month: "long",
    day: "numeric",
  });
}
---

<MainLayout title={`${post.data.title} | Cylis Blog`} currentPage="Blog">
  <article class="py-24">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <header class="mb-12">
        <a
          href="/blog"
          class="inline-flex items-center gap-2 text-sm back-link mb-6 transition-colors"
        >
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          Back to all posts
        </a>

        <div class="flex flex-wrap gap-2 mb-4">
          {
            post.data.tags.map((tag) => (
              <span class="px-2 py-1 text-xs font-mono rounded post-tag">
                {tag}
              </span>
            ))
          }
        </div>

        <h1 class="text-3xl sm:text-4xl font-bold mb-4 post-title">
          {post.data.title}
        </h1>

        <div class="flex items-center gap-4 text-sm post-meta">
          <span>{formatDate(post.data.date)}</span>
          <span>Â·</span>
          <span>by {post.data.author}</span>
        </div>
      </header>

      <!-- Content -->
      <div class="prose-content">
        <Content />
      </div>

      <!-- Footer -->
      <footer class="mt-16 pt-8 post-footer">
        <a
          href="/blog"
          class="inline-flex items-center gap-2 back-link transition-colors"
        >
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          Back to all posts
        </a>
      </footer>
    </div>
  </article>
</MainLayout>

<style>
  /* Prose content styles */
  .prose-content {
    color: var(--theme-text-secondary);
    line-height: 1.75;
  }

  .prose-content :global(h1),
  .prose-content :global(h2),
  .prose-content :global(h3),
  .prose-content :global(h4) {
    color: var(--theme-text);
    font-weight: 600;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }

  .prose-content :global(h1) {
    font-size: 2rem;
  }

  .prose-content :global(h2) {
    font-size: 1.5rem;
  }

  .prose-content :global(h3) {
    font-size: 1.25rem;
  }

  .prose-content :global(h4) {
    font-size: 1.125rem;
  }

  .prose-content :global(p) {
    margin-bottom: 1.5rem;
  }

  .prose-content :global(a) {
    color: var(--theme-accent);
    text-decoration: underline;
    text-underline-offset: 2px;
    transition: color 0.15s;
  }

  .prose-content :global(a:hover) {
    color: var(--theme-accent-hover);
  }

  .prose-content :global(ul),
  .prose-content :global(ol) {
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
  }

  .prose-content :global(ul) {
    list-style-type: disc;
  }

  .prose-content :global(ol) {
    list-style-type: decimal;
  }

  .prose-content :global(li) {
    margin-bottom: 0.5rem;
    color: var(--theme-text-secondary);
  }

  .prose-content :global(blockquote) {
    border-left: 4px solid var(--theme-accent);
    padding-left: 1rem;
    font-style: italic;
    color: var(--theme-text-muted);
    margin: 1.5rem 0;
  }

  .prose-content :global(pre) {
    background-color: var(--theme-bg-tertiary);
    border: 1px solid var(--theme-border);
    border-radius: 0.5rem;
    padding: 1rem;
    overflow-x: auto;
    margin: 1.5rem 0;
    font-size: 0.875rem;
  }

  .prose-content :global(code) {
    font-family: var(--font-mono);
  }

  .prose-content :global(:not(pre) > code) {
    background-color: var(--theme-bg-tertiary);
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
    color: var(--theme-accent);
    font-size: 0.875rem;
  }

  .prose-content :global(img) {
    border-radius: 0.5rem;
    margin: 2rem 0;
  }

  .prose-content :global(hr) {
    border-color: var(--theme-border);
    margin: 2.5rem 0;
  }

  .prose-content :global(table) {
    width: 100%;
    margin: 1.5rem 0;
  }

  .prose-content :global(th) {
    text-align: left;
    padding: 0.75rem;
    background-color: var(--theme-bg-tertiary);
    color: var(--theme-text);
    font-weight: 600;
  }

  .prose-content :global(td) {
    padding: 0.75rem;
    border-bottom: 1px solid var(--theme-border);
    color: var(--theme-text-secondary);
  }

  .prose-content :global(input[type="checkbox"]) {
    margin-right: 0.5rem;
    accent-color: var(--theme-accent);
  }

  /* Blog post header */
  .post-title {
    color: var(--theme-text);
  }

  .post-meta {
    color: var(--theme-text-muted);
  }

  .post-tag {
    color: var(--theme-accent);
    background-color: color-mix(in srgb, var(--theme-accent) 15%, transparent);
  }

  .post-footer {
    border-top: 1px solid var(--theme-border);
  }

  /* Back link styling */
  .back-link {
    color: var(--theme-accent);
  }

  .back-link:hover {
    color: var(--theme-accent-hover);
  }
</style>
