<section id="contact" class="py-24 transition-colors">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-bold text-base-50 mb-2">Get In Touch</h2>
    <div class="w-20 h-1 bg-accent-500 mb-12"></div>

    <div class="max-w-2xl">
      <p class="text-base-300 text-lg mb-10">
        I'm currently looking for opportunities in DevOps and backend
        engineering. Whether you have a question, a project idea, or just want
        to say hi, feel free to reach out!
      </p>

      <div class="grid sm:grid-cols-2 gap-4">
        {
          contactLinks.map((link) => (
            <a
              href={link.href}
              target={link.href.startsWith("mailto") ? undefined : "_blank"}
              rel={link.href.startsWith("mailto") ? undefined : "noopener noreferrer"}
              class="contact-link group flex items-center gap-4 p-4 bg-base-900/50 rounded-xl border border-base-800 hover:border-accent-500/50 transition-all"
            >
              <div class="p-3 bg-base-800 rounded-lg group-hover:bg-accent-500/20 transition-colors">
                <svg
                  class="w-5 h-5 text-accent-400"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                  set:html={link.icon}
                />
              </div>
              <div>
                <p class="text-sm text-base-500">{link.name}</p>
                <p class="text-base-200 font-medium group-hover:text-accent-400 transition-colors">
                  {link.value}
                </p>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </div>
</section>
