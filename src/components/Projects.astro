---
interface Project {
  title: string;
  description: string;
  tags: string[];
  github: string;
  featured?: boolean;
}

const projects: Project[] = [
  {
    title: "Terminal Text Editor (drg)",
    description:
      "A lightweight Unix terminal-based text editor written in C. Minimal dependencies, fast startup, and intuitive keybindings.",
    tags: ["C", "Unix", "Terminal"],
    github: "https://github.com/Cylis-Dragneel/drg",
    featured: true,
  },
  {
    title: "Currency Converter TUI (gonvertor)",
    description:
      "A terminal-based currency conversion tool built with Go. Features real-time exchange rates via API integration.",
    tags: ["Go", "TUI", "API"],
    github: "https://github.com/Cylis-Dragneel/gonvertor",
    featured: true,
  },
  {
    title: "Simple Blog",
    description:
      "A minimalist blogging platform built with Django and Python. Clean design focused on content readability.",
    tags: ["Python", "Django", "Web"],
    github: "https://github.com/Cylis-Dragneel/PythonBlog",
  },
];
---

<section id="projects" class="py-24 bg-base-900/50 transition-colors">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-bold text-base-50 mb-2">Projects</h2>
    <div class="w-20 h-1 bg-accent-500 mb-12"></div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {
        projects.map((project) => (
          <a
            href={project.github}
            target="_blank"
            rel="noopener noreferrer"
            class="project-card group block bg-base-800/50 rounded-xl p-6 border border-base-700 hover:border-accent-500/50 transition-all hover:-translate-y-1"
          >
            <div class="flex items-start justify-between mb-4">
              <svg
                class="w-10 h-10 text-accent-500"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="1.5"
                  d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"
                />
              </svg>
              <svg
                class="w-5 h-5 text-base-500 group-hover:text-accent-400 transition-colors"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                />
              </svg>
            </div>

            <h3 class="text-lg font-semibold text-base-100 mb-2 group-hover:text-accent-400 transition-colors">
              {project.title}
            </h3>

            <p class="text-base-400 text-sm mb-4 line-clamp-3">
              {project.description}
            </p>

            <div class="flex flex-wrap gap-2 mt-auto">
              {project.tags.map((tag) => (
                <span class="px-2 py-1 text-xs font-mono text-accent-400 bg-accent-500/10 rounded">
                  {tag}
                </span>
              ))}
            </div>
          </a>
        ))
      }

      <!-- GitHub CTA Card -->
      <a
        href="https://github.com/Cylis-Dragneel"
        target="_blank"
        rel="noopener noreferrer"
        class="group flex flex-col items-center justify-center bg-base-800/30 rounded-xl p-6 border border-dashed border-base-700 hover:border-accent-500/50 transition-all hover:-translate-y-1"
      >
        <svg
          class="w-12 h-12 text-base-500 group-hover:text-accent-400 mb-4 transition-colors"
          fill="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
          ></path>
        </svg>
        <p class="text-base-400 group-hover:text-base-300 text-center transition-colors">
          View more on GitHub
        </p>
      </a>
    </div>
  </div>
</section>
